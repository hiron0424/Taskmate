<div class="container">
  <%= form_with(model: task, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter task name" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows:5, class: 'form-control', placeholder: "Enter task description" %>
    </div>
    <div class="form-group">
      <%= f.label :due_date %>
      <%= f.text_field :due_date, class: 'form-control', placeholder: "Please enter like => 2020-06-07" %>
    </div>
    <div class="form-group">
      <%= f.label :status %>
      <%= f.select :status, task.status_key, {include_blank: true}, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :priority %>
      <%= f.select :priority, Task.priorities.keys, {include_blank: true}, selected: Task.priorities[@task.priority], class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :labels %><br>
      <%= collection_check_boxes(:task, :label_ids, Label.all, :id, :name, include_hidden: false ) do |t|  %>
        <%= t.label { t.check_box + t.text } %>
      <% end %>
    </div>

    <div class="my-5">
      <%= f.submit nil, class: 'btn btn-outline-primary' %>
    </div>
  <% end %>
</div>