<div class="container">
  <%= form_with(model: task, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter task name" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows:5, class: 'form-control', placeholder: "Enter task description" %>
    </div>
    <div class="form-group">
      <%= f.label :due_date %>
      <%= f.text_field :due_date, class: 'form-control', placeholder: "Please enter like => 2020-06-07" %>
    </div>
    <div class="form-group">
      <%= f.label :status %>
      <%= f.select :status, task.status_key, {}, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :priority %>
      <%= f.select :priority, Task.priorities.keys, {}, selected: Task.priorities[@task.priority], class: 'form-control' %>
    </div>
    <div class="my-5">
      <%= f.submit nil, class: 'btn btn-outline-primary' %>
    </div>
  <% end %>
</div>