<h1>タスクの詳細</h1>
<table>
  <tbody>
    <tr>
      <th>名称</th>
      <td><%= @task.name %></td>
    </tr>

    <tr>
      <th>詳細</th>
      <td><%= @task.description %></td>
    </tr>

    <tr>
      <th><%= t('tasks.due_date')%></th>
      <td><%= @task.due_date %></td>
    </tr>
    
    <tr>
      <th>登録日時</th>
      <td><%= @task.created_at%></td>
    </tr>
  </tbody>
</table><br>
<%= link_to '編集', edit_task_path(@task) %>
<%= link_to '削除', task_path(@task), method: :delete, data: { confirm: "タスク「#{@task.name}」を削除します。よろしいですか？"} %>

<%= link_to '一覧へ', tasks_path %>