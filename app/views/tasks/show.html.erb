<div class="container">
  <h1 class="my-5">タスクの詳細</h1>
  <table class="table table-hover">
    <tbody>
      <tr>
        <th>名称</th>
        <td><%= @task.name %></td>
      </tr>

      <tr>
        <th>詳細</th>
        <td><%= @task.description %></td>
      </tr>

      <tr>
        <th><%= t('tasks.due_date')%></th>
        <td><%= @task.due_date %></td>
      </tr>

      <tr>
        <th><%= t('tasks.status')%></th>
        <td><%= @task.status %></td>
      </tr>

      <tr>
        <th><%= t('tasks.priority')%></th>
        <td><%= @task.priority %></td>
      </tr>

      <tr>
        <th>登録日時</th>
        <td><%= @task.created_at%></td>
      </tr>

      <tr>
        <th>ラベル</th>
        <% @task.labels.each do |l| %>
          <td><%= l.name %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
<div class="container my-4">
  <%= link_to '編集', edit_task_path(@task), class: 'btn btn-outline-success mr-3' %>
  <%= link_to '削除', task_path(@task), method: :delete, data: { confirm: "タスク「#{@task.name}」を削除します。よろしいですか？"}, class: 'btn btn-outline-danger' %>
</div>
<div class="container">
  <%= link_to '一覧へ', tasks_path %>
</div>